@page "/game/{id:int}"
@inject HttpClient httpClient
<PageTitle>GamePage</PageTitle>

<section class="game-container">
    @if(games != null && games.Count() > 0) {
        <img class="game-banner" src="@bannerUrl"/>
        <GameTitleCard coverId="@games[0].Cover.Image_Id" name="@games[0].Name" summary="@games[0].Summary"/>
    } else {
        <h1>Loading</h1>
    }
</section>

@code {
    [Parameter]
    public int Id {get; set;}

    public class Game
    {
        public int Id { get; set; }
        public Cover Cover { get; set; }
        public List<Genre> Genres { get; set; }
        public string Name { get; set; }
        public List<Platform> Platforms { get; set; }
        public double Rating { get; set; }
        public List<int> Similar_Games { get; set; }
        public string Summary { get; set; }
        public List<Video> Videos { get; set; }
        public List<Website> Websites { get; set; }
        public List<Artwork> Artworks { get; set; }
        public List<Screenshot> Screenshots { get; set; }
    }

    public class Artwork
    {
        public int Id { get; set; }
        public string Image_Id { get; set; }
    }
    
    public class Screenshot
    {
        public int Id { get; set; }
        public string Image_Id { get; set; }
    }

    public class Website
    {
        public int Id { get; set; }
        public string Url { get; set; }
    }

    public class Video 
    {
        public int Id { get; set; }
        public string Video_Id { get; set; }
    }

    public class Platform 
    {
        public int Id { get; set; }
        public string Name { get; set; }
    }

    public class Cover
    {
        public int Id { get; set; } = 0;
        public string Image_Id { get; set; }
    }

    public class Genre
    {
        public int Id { get; set; }
        public string Name { get; set; }
    }

    private List<Game>? games = new List<Game>();
    public string bannerUrl = "";

    protected override async Task OnInitializedAsync()
    {
        var response = await httpClient.GetAsync($"http://localhost:5249/games/{Id}");
        if (response.IsSuccessStatusCode)
        {
            games = await response.Content.ReadFromJsonAsync<List<Game>>();
            bannerUrl = $"https://images.igdb.com/igdb/image/upload/t_1080p/{@games[0].Artworks[0].Image_Id}.jpg";
        }
        else
        {
            // Handle error
        }
    }
}